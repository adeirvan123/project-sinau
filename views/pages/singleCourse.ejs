<% layout('layout/layout') %>
    <div class="container">
        <div class="single">
            <div class="single-header">
                <div class="single-header-img">
                    <img draggable="false" src="<%= course.image %> " alt="">
                </div>
            </div>
            <div class="single-title">
                <h1>
                    <%= course.name %>
                </h1>
                <span>
                    Instructor: <strong>
                        <%= course.instructor %>
                    </strong>
                </span>
            </div>
            <div class="single-content">
                <% for(let video of course.video) {%>
                    <div class="single-video">
                        <iframe width=" 868" height="488" src="<%= video %> " title="YouTube video player"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>
