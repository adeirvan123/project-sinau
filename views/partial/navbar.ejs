<header>
    <div class="logo">
        <h1>Sinauu</h1>
    </div>
    <div class="menu">
        <a href="/">Home</a>
        <a href="/course">Course</a>
        <a href="/about">About</a>
    </div>
    <div class="auth">
        <% if (!session.user&&!user) {%>
            <a href="/auth/sign-up">Sign Up</a>
            <a href="/auth/sign-in">Sign In</a>
    </div>
    <% } else { %>
        <div class="out">
            <img src="<%= user.profile %> " alt="">
            <a>
                Hi, <%= user.username %>
            </a>
            <div class="dropdown">
                <a href="/auth/account/<%= user.id %> ">Account</a>
                <a href="/auth/sign-out">Sign Out</a>
            </div>

            <% } %>
        </div>

</header>
